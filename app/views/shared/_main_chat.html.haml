.chat-main
  .chat-main__group-info
    .chat-main__group-info__left
      .chat-main__group-info__left__name
        = @group.name
        .chat-main__group-info__left__name__member
          Member : 
          - @group.users.each do |user|
            = user.name
            
    = link_to edit_group_path(@group), class: "edit" do
      edit
  .chat-main__message-list
    = render @messages

  .chat-main__message-form
    .new_message
      .input-box
        = form_for [@group, @message] do |f|
          = f.text_field :body, class: 'input-box__text', placeholder: 'type a message'
          .form__mask
            = f.label :image, class: 'form__mask__image' do
              = icon('fas', 'image', class: 'icon')
              = f.file_field :image, class: 'image-file'
          = f.submit 'Send', class: 'submit-btn'