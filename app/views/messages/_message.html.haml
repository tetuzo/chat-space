.chat-main__message-list__message
  .chat-main__message-list__message__post
    .chat-main__message-list__message__post__name
      = message.user.name
    .chat-main__message-list__message__post__day
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message-list__message__comment
    - if message.body.present?
      %p.chat-main__message-list__message__comment__body
        = message.body
    = image_tag message.image.url, class: 'chat-main__message-list__message__comment__image' if message.image.present?